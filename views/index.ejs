<h1 class="jumbotron header black container ui main text segment fall"> 
    <marquee style="letter-spacing: 3px; word-spacing: 50px;" behavior="500ms" direction="left"> Programmers &ThickSpace; | &ThickSpace; Developers &ThickSpace; | &ThickSpace; Blog &ThickSpace; | &ThickSpace; Vlog  &ThickSpace; | &ThickSpace; Post</marquee>
</h1>

<div class="container ui main text segment ">
    
    <% blogs.forEach((blog)=>{ %>
        <div class="ui items">
            <div class="item">
              <div class="image">
                <a href="/blogs/<%= blog._id%>"><img class="imageSize" src="<%= blog.image %>"></a>
              </div>
              <div class="content">
                <h3 class="header"><%= blog.title %></h3>
               
                <div class="meta">
                    <p><%= blog.created.toDateString() %></p>
                </div>
                <div class="description">
                    <p> <%= blog.body.substr(0, 95)%>...</p> 
                </div>
                <div class="extra">
                    <a href="/blogs/<%= blog._id %>" class="ui blue basic button">Read More<i class="angle right icon"></i></a>      
                </div>                
              </div>
            </div>
            <hr>
        </div>   
        
    <% }) %> 

    

</div>

<!-- </div>  -->

<%- include("partials/footer") %>